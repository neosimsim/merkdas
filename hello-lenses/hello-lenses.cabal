cabal-version:      1.12
name:               hello-lenses
version:            0.1.0.0
description:
  Please see the README on GitLab at <https://gitlab.com/neosimsim/hello-lenses#readme>

homepage:           https://gitlab.com/neosimsim/hello-lenses
bug-reports:        https://gitlab.com/neosimsim/hello-lenses/issues
author:             Alexander Ben Nasrallah
maintainer:         me@abn.sh
copyright:          2019 Â© Alexander Ben Nasrallah
license:            BSD3
license-file:       LICENSE
build-type:         Simple
extra-source-files:
  README.md
  ChangeLog.md

source-repository head
  type:     git
  location: https://gitlab.com/neosimsim/hello-lenses.git

executable hello-lenses
  main-is:          hello-lenses.lhs
  other-modules:    Paths_hello_lenses
  hs-source-dirs:   .
  ghc-options:      -threaded -rtsopts -with-rtsopts=-N
  build-depends:
      base  >=4.7 && <5
    , lens
    , mtl

  default-language: Haskell2010
